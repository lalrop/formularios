<h1>Registro de ventas</h1>
<%= form_with model: @save, local: true do |f| %>
<%= f.label :detail %>
<br>
<%= f.text_area(:detail, size:'50x10') %>
<br>
<%= f.label :category %>
<%= f.text_field :category, id: :category_content %>
<br>
<%= f.label :value %>
<%= f.number_field :value, id: :value_content %>
<br>
<%= f.label :discount %>
<%= f.number_field :discount, min:1, max:40, id: :discount_content %>
<br>
<spam>IVA</spam>
<%= f.check_box :iva %>
<%= f.submit "Crear" %>
<%= @total %>
<% end %>
